# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/local/libexec/i3blocks/$BLOCK_NAME
separator=false
separator_block_width=8
markup=none
interval=5
border_top=0
border_left=0
border_right=0
border_bottom=2

# border=#ff346d
# border=#1ab872
# border=#ffa500
# border=#800080
# border=#1aafb8
# border=#ffffff

[vpn]
label= VPN:
command=test -d /sys/class/net/tun0 && echo "<span font='monospace'>up </span>" || echo "<span font='monospace'>down </span>"
markup=pango
border=#e20096

[wifi]
label=  
command=echo "<span font='monospace'>$(/home/gabeg/projects/bin/wifi) </span>"
markup=pango
border=#0025e2

[brightness]
label=  
command=echo "<span font='monospace'>$(/home/gabeg/projects/bin/bright -S) </span>"
markup=pango
interval=once
signal=11
border=#25e200

[volume]
label=  
command=echo "<span font='monospace'>$(/usr/local/libexec/i3blocks/volume) </span>"
markup=pango
instance=Master
interval=once
signal=10
border=#ffed10

[battery]
label=  
command=echo "<span font='monospace'>$(/home/gabeg/projects/bin/battery -s) </span>"
markup=pango
instance=0
interval=10
border=#e24c00

[date]
label=  
command=echo "<span font='monospace'>$(date '+%a %B %-d %-I:%M:%S %p') </span>"; [[ -z "${BLOCK_BUTTON}" ]] || gsimplecal &
markup=pango
interval=1
border=#e20025
