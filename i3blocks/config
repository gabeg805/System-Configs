# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/local/libexec/i3blocks/$BLOCK_NAME
separator=false
separator_block_width=4
markup=none
interval=5

#border=#ff346d
#border=#1ab872
#border=#ffa500
#border=#800080
#border=#1aafb8
#border=#ffffff

[packages]
command=/data/projects/system/i3blocks/packages
markup=pango
interval=5

[cpu]
command=/data/projects/system/i3blocks/cpu
markup=pango

[memory]
command=/data/projects/system/i3blocks/memory
markup=pango

[vpn]
command=/data/projects/system/i3blocks/vpn
markup=pango
interval=1

[wifi]
command=/data/projects/system/i3blocks/wifi
markup=pango

[brightness]
command=/data/projects/system/i3blocks/brightness
markup=pango
interval=once
signal=11

[volume]
command=/data/projects/system/i3blocks/volume
markup=pango
instance=Master
interval=once
signal=10

[battery]
command=/data/projects/system/i3blocks/battery
markup=pango
interval=10

[date]
command=/data/projects/system/i3blocks/date
markup=pango
interval=1

[power]
command=/data/projects/system/i3blocks/power
interval=once
